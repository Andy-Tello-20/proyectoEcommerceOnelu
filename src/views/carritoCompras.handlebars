<div class="contenedor-carrito">
   
    {{#each listcarrito}}

    <div  class="carrito-productos">
        <div class="carrito-producto">
            <img class="carrito-producto-imagen" src="{{img}}" alt="{{title}}">
            <div class="carrito-producto-titulo">
                <small>TÃ­tulo</small>
                <h3 class="h3-carrito">{{title}}</h3>
            </div>
            <div class="carrito-producto-cantidad">
                <small>Cantidad</small>
                <div class="increment-decrement">
				<span class="menos2">-</span>
				<span class="num2">{{quantity}}</span>
				<span class="mas2">+</span>
			</div>
            </div>
            <div class="carrito-producto-precio">
                <small>Sub total</small>
                <p class="precio2">${{price}}</p>
                <button class="carrito-producto-eliminar" id="abrigo-01"><i class="bi bi-trash-fill"></i></button>
            </div>
            
        </div>
    </div>
    
    {{/each}}

    <div class="sumatoria-carrito">
        <p class="total-carrito">TOTAL = ${{suma}}</p>
    </div>
</div>